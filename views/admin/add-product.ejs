<%- include('../includes/head.ejs')%>
<%- include('../includes/navigation.ejs')%>

    <main>
        <form class="product-form" action="/admin/<%= edit ? 'edit-product/' + product.id : 'add-product' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= edit ? product.title : '' %>">
            </div>
                <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= edit ? product.imageUrl : '' %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" value="<%= edit ? product.price : '' %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" ><%= edit ? product.description : '' %></textarea>
                
            </div>
            <button class="btn" type="submit"> <% if(!edit) { %> Add Product <% } else { %> Edit Product <% }%></button>
        </form>
    </main>
<%- include('../includes/end.ejs')%>